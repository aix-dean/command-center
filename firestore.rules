rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read/write their own user documents
    match /command-center/{tenant}/command_center_users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to read/write other documents in their tenant
    match /command-center/{tenant}/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}